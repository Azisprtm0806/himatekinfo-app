<div class="card shadow mb-4">
  <div class="card-header py-3">
    <button
      type="button"
      class="btn btn-primary"
      data-toggle="modal"
      data-target="#add_modal"
    >
      <i class="fas fa-plus"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>Judul</th>
            <th>Deskripsi</th>
            <th>Image</th>
            <th>Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% for( let i = 0; i < post.length; i++ ) { %>
          <% const desc = post[i].deskripsi.substr(0, 25); %> 
          <tr>
            <td><%= post[i].judul %></td>
            <td><%= desc %></td>
            <td>
              <img
                src="http://localhost:3000/<%= post[i].image %>"
                alt="image"
                width="100px"
              />
            </td>
            <td>
              <a href="/admin/detailPost/<%= post[i].id %>" class="btn btn-success btn-circle btn-sm button-update"><i class="fa fa-plus-circle fa-lg"></i></a>
             
              <div
                class="btn-group"
                role="group"
                aria-label="Button group with nested dropdown"
                style="margin-left: 10px;"
              >
                <div class="btn-group btn-group-sm" role="group">
                  <button
                    id="btnGroupDrop1"
                    type="button"
                    class="btn btn-info dropdown-toggle"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  ></button>
                  <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                    <a
                      class="dropdown-item"
                      href="/admin/post/<%= post[i].id %>"
                      >Edit</a
                    >
                    <form
                      action="/admin/post/<%= post[i].id %>?_method=DELETE"
                      method="post"
                    >
                      <button type="submit" class="dropdown-item">Hapus</button>
                    </form>

                  </div>
                </div>
              </div>
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>